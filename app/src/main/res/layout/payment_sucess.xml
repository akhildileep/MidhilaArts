<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Basiclight"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="30dp"
    android:translationZ="30dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Your payment was done. Visit My Course section to view your package setails" />

    <LinearLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/paymentsucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/gallery" />


    </LinearLayout>

    <TextView
        android:id="@+id/paymentsheet_close"
        android:layout_width="wrap_content"

        android:layout_height="36dp"
        android:text="close"
        android:textColor="#fcfcfc"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>
</LinearLayout>